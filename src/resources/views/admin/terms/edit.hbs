<div id="my-courses">
    <h3>Sửa học phần</h3>
    <div class="mt-3">
        <form method="POST" action="/admin-term/{{term._id}}?_method=PATCH">
            <div class="form-group">
                <label for="name">Tên phần học</label>
                <input type="text" class="form-control" value="{{term.name}}" name="name">
            </div>
            <div class="form-group">
                <label for="maKH">maKH</label>
                <input type="text" class="form-control" value="{{term.maKH}}" name="maKH" readonly>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</div>