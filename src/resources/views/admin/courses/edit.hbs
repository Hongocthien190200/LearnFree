<div id="my-courses">
    <a href="/admin-course/stored"><h3>Trở về</h3></a>
    <h3>Sửa khóa học</h3>
    <div class="mt-3">
        <form method="POST" action="/admin-course/{{course._id}}?_method=PATCH">
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" class="form-control" value="{{course.name}}" name="name">
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea type="text" class="form-control"  name="description">{{course.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="img">Hình ảnh</label>
                <input type="text" class="form-control" value="{{course.img}}" name="img">
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</div>